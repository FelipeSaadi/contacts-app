@model ContactModel
@{
    ViewData["Title"] = "Excluir Contato";
}

<div class="text-center d-flex flex-column gap-4">
    <h3>Deseja excluir (@Model.Name) de seus contatos?</h3>
    <form asp-controller="Contact" asp-action="Delete" method="post">
        <button type="submit" class="btn btn-danger" asp-controller="Contact" asp-action="Delete">Confirmar</button>
        <button class="btn btn-cancel" role="button" asp-controller="Contact" asp-action="Index">Cancelar</button>
    </form>
</div>
